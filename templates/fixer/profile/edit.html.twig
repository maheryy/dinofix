{% extends 'fixer/fixer.html.twig' %}

{% block title %}Profil -
	{{app.user.firstname}}
{% endblock %}

{% block body %}
	<div class="container">
		{% if app.user.picture %}
			<img src="{{ asset("uploads/fixer/" ~ app.user.picture) }}" style="max-width: 200px;" alt="{{ app.user.picture }}">
		{% else %}
			<img src="{{ asset('images/fixer.png') }}" style="max-width: 200px;" alt="default-service">
		{% endif %}
		{{ form_start(form) }}
		{{ form_widget(form) }}
		<button class="btn-primary">{{ button_label|default('Save') }}</button>
		{{ form_end(form) }}
		<a class="btn-secondary" href="{{ path('fixer_home') }}">Retour</a>
	</div>
{% endblock %}

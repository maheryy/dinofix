{% block body %}
    <main class="main-container login-container admin-login sided">
        <div class="content-back">
            <div class="content-center">
{#                <div>#}
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <div class="form-control-wrapper py-0.5">
                            <i class="icon-left fa-solid fa-envelope"></i>
                            <input type="email" value="{{ last_username }}" name="email" class="form-control" autocomplete="email" placeholder="Adresse e-mail" required autofocus>
                        </div>
                        <div class="form-control-wrapper py-0.5">
                            <i class="icon-left fa-solid fa-lock"></i>
                            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="Mot de passe" required>
                        </div>
                        <div class="pt-1 flex justify-center">
                            <button class="btn-login" type="submit">Se connecter</button>
                        </div>
                        <input type="hidden" name="_csrf_token"
                            value="{{ csrf_token('authenticate') }}"
                        >
                    </form>
{#                </div>#}
            </div>
        </div>
    </main>
{% endblock %}


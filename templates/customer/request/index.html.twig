{% extends 'customer/customer.html.twig' %}

{% block title %}Mes demandes en cours{% endblock %}

{% block body %}
    {% if requests is not empty %}
        <section class="request-container">
            <div class="request-results">
                <ul class="request-list">
                    {% for request in requests %}
                        <li class="request-item">
                            <div class="content-left">
                                <div class="item-title">
                                    <h4><a href="{{ path('customer_request_show', {'id': request.id}) }}">{{ request.reference }}</a></h4>
                                </div>
                                <div class="item-description">
                                    <span>{{ request.subject }}</span>
                                    <span>{{ request.description }}</span>
                                </div>
                            </div>
                            <div class="content-right">
                                <div class="item-title">
                                    <a href="#">{{ request.status }}</a>
                                </div>
                                <div class="item-description">
                                    <span>{{ request.createdAt ? request.createdAt|date('Y-m-d H:i:s') : '' }}</span>
                                </div>
                                <div class="item-action">
                                    <a href="{{ path('customer_request_show', {'id': request.id}) }}">Voir</a>
                                    <a href="{{ path('customer_request_edit', {'id': request.id}) }}">Modifier</a>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </section>
    {% else %}
        <section class="request-container no-results">
            <div class="no-results-text">
                <h1>Aucune demande trouvée</h1>
                <p>Veuillez faire une demande</p>
            </div>
        </section>
    {% endif %}
    <a href="{{ path('customer_request_new') }}">Créer une demande</a>
    <a href="{{ path('customer_search') }}">Retour</a>
{% endblock %}

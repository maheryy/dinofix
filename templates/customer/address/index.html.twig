{% extends 'base.html.twig' %}

{% block title %}Address index{% endblock %}

{% block body %}
    <h1>Address index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Country</th>
                <th>Region</th>
                <th>City</th>
                <th>Postcode</th>
                <th>Street</th>
                <th>Additional</th>
                <th>Location</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for address in addresses %}
            <tr>
                <td>{{ address.id }}</td>
                <td>{{ address.country }}</td>
                <td>{{ address.region }}</td>
                <td>{{ address.city }}</td>
                <td>{{ address.postcode }}</td>
                <td>{{ address.street }}</td>
                <td>{{ address.additional }}</td>
                <td>{{ address.location }}</td>
                <td>
                    <a href="{{ path('customer_address_show', {'id': address.id}) }}">show</a>
                    <a href="{{ path('customer_address_edit', {'id': address.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('customer_address_new') }}">Create new</a>
{% endblock %}

<section id="suggestion" class="service-suggestion-container suggestion">
    <div class="service-suggestion">
        <h2>Plus de service de <a href="{{ fixer_profile }}">{{ service.fixer.firstname }} {{ service.fixer.lastname }}</a></h2>
        <ul class="py-0.25 mb-0.25">
            {% for service in other_services %}
                <li class="service-card">
                    <div class="content-top">
                        <img src="https://picsum.photos/id/171/450/450" alt="">
                    </div>
                    <div class="content-bottom">
                         <span class="name py-0.5"><a href="{{ path('service', {'id': service.id}) }}">{{ service.name }}</a></span>
                        <p class="flex items-center py-0.5">
                            <span class="stars">
                                {% for index in [1,2,3,4,5] %}
                                    {% set img = service.rating >= index or index - service.rating <= 0.15
                                        ? "star-filled" :  (index - service.rating >= 0.85 ? 'star-empty' : 'star-half') %}
                                    <img class="review-star" alt="" src="{{ asset("images/#{img}.svg") }}">
                                {% endfor %}
                            </span>
                            <span class="review-total">({{ service.reviews | length }})</span>
                        </p>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
</section>